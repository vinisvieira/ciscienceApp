<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/imageViewNoQuizAvaiable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_empty_white"/>

    <TextView
        android:id="@+id/textViewNoQuizAvaiable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/imageViewNoQuizAvaiable"
        android:textColor="@color/colorText"
        android:text="@string/text_view_no_quiz_avaiable"/>

</RelativeLayout>